{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "target": "es6",
    "module": "ESNext",
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["tests", "node_modules"]
}
